<main>
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>

        <% if @book.errors.any? %>
          <div id="error_explanation"><h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
          <% @book.errors.full_messages.each do |message| %>
            <ul><li><%= message %></li></ul>
          <% end %>
          </div>
        <% end %>

        <%= form_with model:@book, local: true do |f| %>
          <label  for="book_title">Title</label><br >
          <%= f.text_field :title, :class => "form-control" %><br >
          <label for="book_opinion">Opinion</label><br >
          <%= f.text_field :body, :class => "form-control" %>
          <br >
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        <% end %>
        <br >
        <%= link_to "Show", booklist_path(@book.id) %> |
        <%= link_to "Back", "/books" %>
      </div>
    </div>
  </div>
</main>